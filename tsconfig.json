{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",

    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",

    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    },
    "typeRoots": ["./src/types/express/index.d.ts", "./node_modules/@types"]
  },
  "include": ["src"]
}